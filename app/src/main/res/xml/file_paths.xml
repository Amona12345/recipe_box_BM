<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- External files directory -->
    <external-files-path
        name="external_files"
        path="." />

    <!-- Internal files directory (root) -->
    <files-path
        name="internal_files"
        path="." />

    <!-- Internal files subdirectory for camera images -->
    <files-path
        name="camera_images"
        path="camera_images" />

    <!-- Cache directory -->
    <cache-path
        name="cache_files"
        path="." />

    <!-- External cache directory (often works better for camera) -->
    <external-cache-path
        name="external_cache"
        path="." />
</paths>